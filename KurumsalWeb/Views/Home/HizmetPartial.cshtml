@model IEnumerable<KurumsalWeb.Models.Model.Hizmet>


@{
    Layout = null;
}

<section class="services">
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {

                <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up">
                    <div class="icon-box icon-box-pink">
                        <div class="icon"><i class="bx bx-bookmarks"></i></div>
                        <h4>@item.Baslik </h4>
                        <p>@Html.Raw(item.Aciklama)</p>
                        <a href="/Home/Hizmetlerimiz/" class="btn-get-started animate__animated animate__fadeInUp">Detay Gör</a>

                    </div>
                </div>

            }
        </div>
        </div>
   </section>