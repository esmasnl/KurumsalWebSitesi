@model KurumsalWeb.Models.Model.Blog
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<main id="main">

    <!-- ======= Blog Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Blog</h2>

                <ol>
                    <li><a href="/Home/Blog/">Ana Sayfa</a></li>
                    <li>Blog Detay</li>
                </ol>
            </div>

        </div>
    </section><!-- End Blog Section -->
    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row">

                <div class="col-lg-8 ">

                    <article class="entry">
                        <h2 class="title">
                            <a>@Model.Baslik</a>
                        </h2>
                        </br>
                        </br>
                        <div class="entry-img">
                            <img src="@Model.ResimURL" alt="@Model.Baslik">
                        </div>
                        <div class="entry-meta">
                            <ul>
                                <li><i class="icon-folder-open"></i><a>@Model.Kategori.KategoriAd</a></li>
                                @*<li class="d-flex align-items-center"><i class="bi bi-chat-dots"></i> <a href="blog-single.html">12 Comments</a></li>*@
                            </ul>
                        </div>


                        <div class="entry-content">
                            <p>
                                @Html.Raw(Model.İcerik)
                            </p>
                        </div>

                    </article><!-- End blog entry -->
                    
                    <div >

                    </div>

                </div><!-- End blog entries list -->

                <div class="col-lg-4">

                    <div class="sidebar">

                        <h3 class="sidebar-title">KATEGORİLER</h3>
                        <div class="sidebar-item categories">
                            @{
                                Html.RenderAction("BlogKategoriPartial", "Home");
                            }
                        </div><!-- End sidebar categories-->

                        <h3 class="sidebar-title">Son Blog Yazıları</h3>
                        <div class="sidebar-item recent-posts">
                            @{
                                Html.RenderAction("BlogKayıtPartial", "Home");
                            }

                        </div><!-- End sidebar recent posts-->

                    </div><!-- End sidebar -->

                </div><!-- End blog sidebar -->

            </div>

        </div>
    </section><!-- End Blog Section -->

</main><!-- End #main -->
