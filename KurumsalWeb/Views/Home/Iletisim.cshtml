
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<main id="main">

    <!-- ======= Contact Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>İletişim</h2>
                <ol>
                    <li><a href="/Home/Index/">Ana Sayfa</a></li>
                    <li>İletişim</li>
                </ol>
            </div>

        </div>
    </section><!-- End Contact Section -->
    <!-- ======= Contact Section ======= -->
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            <div class="row">

                <div class="col-lg-6">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="info-box">
                                <i class="bx bx-map"></i>
                                <h3>Adres</h3>
                                <p>@ViewBag.Iletisim.Adres</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bx bx-envelope"></i>
                                <h3>Fax</h3>
                                <p>@ViewBag.Iletisim.Fax</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box">
                                <i class="bx bx-phone-call"></i>
                                <h3>Telefon</h3>
                                <p>@ViewBag.Iletisim.Telefon</p>
                            </div>
                        </div>
                    </div>

                </div>

                
                <div class="col-lg-6">

                   
                    <div class="alert alert-light">@ViewBag.Uyari</div>
                    <form action="/Home/Iletisim/" method="post" role="form" class="contactForm">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="text" name="adsoyad" class="form-control" id="name" placeholder="Ad Soyadı" required>
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="email" class="form-control" name="email" id="email" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" class="form-control" name="konu" id="subject" placeholder="Konu" required>
                        </div>
                        <div class="form-group mt-3">
                            <textarea class="form-control" name="mesaj" rows="5" placeholder="Mesaj" required></textarea>
                        </div>
                        </br>
                        <div class="text-center"><button type="submit" class="btn btn-outline-dark">Gönder</button></div>
                    </form>
                </div>

            </div>

        </div>
    </section><!-- End Contact Section -->
    <!-- ======= Map Section ======= -->
    <section class="map mt-2">
        <div class="container-fluid p-0">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d779902.2821820898!2d28.473215259388432!3d40.22033309334571!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ca1582d8d45695%3A0x61a00555fc973392!2sBursa!5e0!3m2!1str!2str!4v1680170360377!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </section><!-- End Map Section -->

</main><!-- End #main -->