@model IEnumerable<KurumsalWeb.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>HİZMETLER</h1>


        <nav>

            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Hizmetler</a></li>
                <li class="breadcrumb-item active">Ana Sayfa</li>

            </ol>
        </nav>
        <a class="btn btn-outline-primary" href="/Hizmet/Create/">Yeni Ekle</a>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Resim URL</th>
                        <th scope="col">İşlemler</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.HizmetId</th>
                            <td>@item.Baslik</td>
                            <td>@Html.Raw(item.Aciklama)</td>
                            <td><img width="100" height="100" src="@item.ResimURL" /></td>
                            <td><a href="/Hizmet/Edit/@item.HizmetId">Güncelle</a> | <a href="/Hizmet/Delete/@item.HizmetId">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

</main>