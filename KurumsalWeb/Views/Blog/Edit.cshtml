@model KurumsalWeb.Models.Model.Blog
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script>
    window.onload = function () {
        CKEDITOR.replace('editör');
    };
</script>

<main id="main" class="main">

    <div class="pagetitle">
        <h1>BLOG</h1>

        <nav>

            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a >Blog</a></li>
                <li class="breadcrumb-item active">Güncelle</li>

            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">


            @* <form class="form" id="feedback_form" method="post" action="/Blog/Edit/" enctype="multipart/form-data">*@
            @using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken();

            <div class="col-md-4">
                <label for="cname" class="form-label">Başlık</label>
                <input type="text" class="form-control" id="Baslik" name="Baslik" required value="@Model.Baslik">
            </div>

            <div class="col-md-4">
                <label for="cemail" class="form-label">Kategori</label>
                @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
            </div>


            <div class="col-md-4">
                <label for="cemail" class="form-label">İçerik</label>
                <textarea class="form-control" required id="editör" name="İcerik">@Model.İcerik</textarea>
            </div>

            <div class="col-md-4">
                <label for="validationDefaultUsername" class="form-label">Önceki Resim</label>
                <div class="form-group">
                    <img src="@Model.ResimURL" width="100" height="100" />
                </div>
            </div>

            <div class="col-md-4">
                <label for="validationDefaultUsername" class="form-label">Resim</label>
                <div class="form-group">
                    <input type="file" class="form-control" name="ResimURL" accept=".jpg,.png,.jpeg" />
                </div>
            </div>


            <div class="col-12">
                <button class="btn btn-outline-primary" type="submit">Ekle</button>
                <button class="btn btn-outline-primary" type="button"> <a href="/Blog/Index">İptal</a></button>
            </div>
           
            }
        </div>
    </section>

</main>

