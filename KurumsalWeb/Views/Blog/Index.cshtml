@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable(

            {

                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"

                }
            }
        );
    });
</script>

<main id="main" class="main">

    <div class="pagetitle">
        <h1>BLOG</h1>

        <nav>

            <ol class="breadcrumb">
                <li class="breadcrumb-item">Blog</li>
                <li class="breadcrumb-item active">Ana Sayfa</li>


            </ol>
            <a class="btn btn-outline-primary" href="/Blog/Create/">Yeni Blog Ekle</a>
        </nav>
    </div>
    <section class="section dashboard">
        <div class="row">

            <table class="display" id="myTable">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Kategori</th>
                        <th scope="col">ResimURL</th>
                        <th scope="col">İşlemler</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.BlogId</th>
                            <td>@item.Baslik</td>
                            <td>@item.KategoriId</td>
                            <td> <img src="@item.ResimURL" width="50" height="50" /></td>
                            <td><a href="/Blog/Edit/@item.BlogId">Güncelle </a> | <a href="/Blog/Delete/@item.BlogId">Sil</a></td>

                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </section>

</main>
