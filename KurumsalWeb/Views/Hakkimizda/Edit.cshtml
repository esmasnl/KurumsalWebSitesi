@model KurumsalWeb.Models.Model.Hakkimizda

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    window.onload = function () {
        CKEDITOR.replace('editör');
    };
</script>

<main id="main" class="main">

    <div class="pagetitle">
        <h1>HAKKIMIZDA</h1>

        <nav>

            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a >Hakkımızda</a></li>
                <li class="breadcrumb-item active">Güncelle</li>

            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Hakkımızda</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.HakkimizdaId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <textarea name="Aciklama" id="editör">@Model.Aciklama</textarea>
                            @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Güncelle" class="btn btn-outline-primary" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Geri Dön", "Index")
            </div>
        </div>
    </section>

</main>