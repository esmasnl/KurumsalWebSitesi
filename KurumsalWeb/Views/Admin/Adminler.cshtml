@model IEnumerable<KurumsalWeb.Models.Model.Admin>

@{
    ViewBag.Title = "Adminler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<main id="main" class="main">

    <div class="pagetitle">
        <h1>ADMİNLER</h1>

        <nav>

            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Adminler</a></li>
                <li class="breadcrumb-item active">Ana Sayfa</li>

            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <p>
                @Html.ActionLink("Yeni Ekle", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Eposta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sifre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Yetki)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Eposta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sifre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Yetki)
                        </td>
                        <td>
                            @Html.ActionLink("Güncelle", "Edit", new { id = item.AdminId }) |
                            @Html.ActionLink("Detay", "Details", new { id = item.AdminId }) |
                            @Html.ActionLink("Sil", "Delete", new { id = item.AdminId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>

</main>